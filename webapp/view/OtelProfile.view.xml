<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.uxap"
  xmlns:m="sap.m"
  xmlns:sf="sap.f"
  controllerName="ui5.walkthrough.controller.OtelProfile"
  height="100%">

    <f:ObjectPageLayout>
        <f:headerTitle>
            <f:ObjectPageHeader
                objectTitle="Profile laminate din oțel"
                />
        </f:headerTitle>

        <f:sections>
            <f:ObjectPageSection title="Produse disponibile">
                <f:subSections>
                    <f:ObjectPageSubSection>
                        <f:blocks>
                            <m:HBox width="100%">
                                
                                <m:VBox width="25%" class="sapUiSmallMarginEnd">
                                    <m:Panel headerText="Lățime (mm)" expandable="true" expanded="true">
                                        <m:VBox>
                                            <m:CheckBox id="cbWidth12" text="12" select=".onFilterSelect"/>
                                            <m:CheckBox id="cbWidth14" text="14" select=".onFilterSelect"/>
                                            <m:CheckBox id="cbWidth20" text="20" select=".onFilterSelect"/>
                                         </m:VBox>
                                    </m:Panel>

                                    <m:Panel headerText="Grosime (mm)" expandable="true" expanded="true">
                                        <m:VBox>
                                            <m:CheckBox id="cbThick3" text="3" select=".onFilterSelect"/>
                                            <m:CheckBox id="cbThick4" text="4" select=".onFilterSelect"/>
                                            <m:CheckBox id="cbThick5" text="5" select=".onFilterSelect"/>

                                        </m:VBox>
                                    </m:Panel>
                                </m:VBox>

                                <m:VBox width="75%">
                                    <m:List id="productList" items="{prod>/items}">
                                        <m:CustomListItem>
                                            <m:HBox>
                                                <m:Image src="{prod>img}" width="80px"/>
                                                <m:VBox class="sapUiSmallMarginBegin">
                                                    <m:Title text="{prod>name}" level="H6"/>
                                                    <m:Text text="{prod>price} lei/m"/>
                                                    <m:Button text="Adaugă în coș" type="Emphasized" press=".onAddToCart"/>
                                                </m:VBox>
                                            </m:HBox>
                                        </m:CustomListItem>
                                    </m:List>
                                </m:VBox>

                            </m:HBox>
                        </f:blocks>
                    </f:ObjectPageSubSection>
                </f:subSections>
            </f:ObjectPageSection>
        </f:sections>
    </f:ObjectPageLayout>
</mvc:View>
